<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/splash_gradient"
        tools:context=".SplashActivity"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="16dp">


        <!-- Logo or Image -->

        <TextView
            android:id="@+id/textView"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="113dp"
            android:layout_marginEnd="65dp"
            android:fontFamily="@font/atomic_age"
            android:text="DoltNow"
            android:textColor="#FFFFFF"
            android:textSize="55sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="194dp"
            android:layout_marginEnd="54dp"
            android:fontFamily="sans-serif-medium"
            android:text="Gets things done with DoltNow"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <ImageView
            android:id="@+id/imageView_logo"
            android:layout_width="163dp"
            android:layout_height="164dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="121dp"
            android:src="@drawable/_a5c143ac14e2ff7921c7d63ed2ad540" />

        <Button
            android:id="@+id/button"
            android:layout_width="148dp"
            android:layout_height="40dp"
            android:layout_below="@id/imageView_logo"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="40dp"

            android:layout_marginEnd="127dp"
            android:layout_marginBottom="235dp"
            android:backgroundTint="#000000"
            android:text="OPEN"
            android:textSize="21dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="308dp"
            android:layout_height="134dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="549dp"
            android:layout_marginEnd="45dp"
            android:text="DoltNow streamlines task management with intuitive features, prioritization tools, and seamless collaboration for efficient productivity and organization."
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>